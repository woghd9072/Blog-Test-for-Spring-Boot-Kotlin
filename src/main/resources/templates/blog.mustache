{{> header}}

<h1>{{title}}</h1>

<div class="articles">
    {{#articles}}
        <section>
            <header class="article-header">
                <h2 class="article-title"><a href="/article/{{slug}}">{{title}}</a></h2>
                <div>
                    By <strong>{{author.firstname}}</strong>, on <strong>{{addedAt}}</strong>
                </div>
            </header>
            <div class="article-description">
                {{headerline}}
            </div>
        </section>
    {{/articles}}
</div>

{{> footer}}